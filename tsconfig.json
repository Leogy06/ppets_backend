{
  "compilerOptions": {
    "outDir": "dist", // Output compiled files here
    "rootDir": "src", // Source TypeScript files live here
    "module": "NodeNext", // For ES Module support
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["src"] // Ensure only the "src" folder is compiled
}
